{% extends 'base.html.twig' %}

{% block title %}Prestations{% endblock %}

{% block stylesheets %}
            <link rel="stylesheet" href="{{asset('assets/style.css')}}">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% endblock %}

{% block body %}

<h1>Mes prestations</h1>

{% if services is empty %}
    <h1>Aucune prestation Ã  afficher.</h1>
{% else %}
{% for service in services %}
<div id="therapie_placeholder" class="d-flex flex-direction:row" style"display:flex; flex-direction:row; align-items: center; padding: 1.3em; border-radius: 30px;">
    <img src="{{ asset('uploads/pictures/' ~ service.picture)}}" alt="" id="illu_therapie" style="max-height: 12em; max-width: 18em; border-radius: 30px; border: 0.5rem solid #623227;">
    <div id="desc_therapie_index" style="padding: 10px;">
        <h4 style="color: #d9b391;">{{ service.title }} ({{ service.duration }} min)</h4>
        <p>{{ service.description }}</p>
        <div id="button_EN_SAVOIR_PLUS" style="color: #F2EDE4; display:flex; flex-direction:row; justify-content: space-evenly; background-color: #d9b391; border-radius: 30px; max-width: 9.4em ; padding: 5px; padding-left: 10px; padding-right: 10px;" onmouseover="this.style.color='#bf895a';" onmouseout="this.style.color='#d9b391';">                         
            <a style="color: #F2EDE4;text-decoration:none" href="/services/single/{{service.id}}"><i class="bi bi-arrow-left-circle"></i>   En savoir plus...</a>
        </div>  
    </div>
</div>
{% endfor %}
{% endif %}




{% endblock %}