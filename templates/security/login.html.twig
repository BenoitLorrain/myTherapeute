{% extends 'base.html.twig' %}

{% block title %}Page de connexion{% endblock %}

{% block body %}

    <h1 class="display-4 text-center mt-2">Connexion</h1>
    <form action="{{ path('security_login') }}" method="post" class="col-md-
    5 mx-auto">
        <div class="form-group">
            <label for="_username">Email</label>
            <input type="text" class="formcontrol" name="_username" placeholder="Adresse email..." required>
        </div>
        <div class="form-group">
            <label for="_password">Mot de passe</label>
            <input type="password" class="formcontrol" name="_password" placeholder="Mot de passe..." required>
        </div>
        <input type="submit" value="Connexion" class="btn btn-primary">
    </form>
{% endblock %}
